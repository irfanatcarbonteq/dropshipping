{
  "openapi": "3.0.0",
  "info": {
    "title": "SignUp",
    "version": "1.0",
    "contact": {
      "name": "Irfan ",
      "email": "irfan@carbonteq.com"
    },
    "description": "Account Creation"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "localhost"
    }
  ],
  "paths": {
    "/api/v1/signup": {
      "post": {
        "summary": "Account Creation",
        "operationId": "post-api-v1-signup",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "SignUp Successfully": {
                    "value": {
                      "message": "User is created successfully."
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity (WebDAV)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "Email is Already taken": {
                    "value": {
                      "error": "Email is already taken"
                    }
                  },
                  "Password Mismatch": {
                    "value": {
                      "error": "Your password and confirm password do not match"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "confirmPassword": {
                    "type": "string"
                  },
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "number"
                  }
                },
                "required": [
                  "email",
                  "password",
                  "confirmPassword"
                ]
              }
            }
          },
          "description": "User will send email , password , confirmConfirm , firstName, lastName and phoneNumber in post request . If user is created successfully then this api will send success message with success code otherwise will send error message with error code"
        },
        "description": "Endpoint for Account Creation"
      }
    }
  },
  "components": {
    "schemas": {}
  }
}